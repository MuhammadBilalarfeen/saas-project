<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">

      <div class="card shadow-sm">

        <!-- Header -->
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0"><%= @project.title %></h3>
          <small class="text-light">Organization - <%= tenant_name(@project.tenant_id) %></small>
        </div>

        <!-- Body -->
        <div class="card-body">

          <!-- Render Project Fields -->
          <%= render @project %>

          <hr>

          <!-- PDF Section -->
          <% if @project.pdf_file.attached? %>
            <div class="mb-4">
              <h5><i class="bi bi-file-earmark-pdf"></i> Attached PDF</h5>
              <%= link_to "Download PDF", rails_blob_path(@project.pdf_file, disposition: "attachment"), class: "btn btn-outline-primary btn-sm" %>
            </div>
          <% end %>

          <!-- Images Section -->
          <% if @project.images.attached? %>
            <div class="mb-4">
              <h5><i class="bi bi-images"></i> Uploaded Images</h5>
              <div class="d-flex flex-wrap gap-3">
                <% @project.images.each do |img| %>
                  <%= image_tag img, class: "img-thumbnail", style: "max-width: 180px;" %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Artifacts Section -->
          <% if @project.artifacts.any? %>
            <div class="mb-3">
              <h5><i class="bi bi-journal-text"></i> Artifacts</h5>
              <%= render @project.artifacts %>
            </div>
          <% end %>

        </div>

        <!-- Footer -->
        <div class="card-footer d-flex justify-content-between align-items-center">
          <%= link_to '&lt; Back to Home'.html_safe, root_path, class: 'btn btn-secondary' %>

          <div class="btn-group">
            <%= link_to t('.edit', default: t("helpers.links.edit")),
                        edit_tenant_project_path(@tenant, @project),
                        class: "btn btn-info" %>

            <%= link_to 'Edit Project Users',
               users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), :class => 'btn btn-default' %>

            <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                        tenant_project_path(@tenant, @project),
                        method: :delete,
                        data: { confirm: t('.confirm', default: 'Are you sure?') },
                        class: "btn btn-danger" %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>