<script language="JavaScript">
  Stripe.setPublishableKey("<%= ENV['STRIPE_TEST_PUBLISHABLE_KEY'] %>");
</script>

<h1><%= t('.sign_up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <!-- Email -->
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <!-- Password -->
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">
        <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
      </small>
    <% end %>
  </div>

  <!-- Password confirmation -->
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="row">
    <%= fields_for(:tenant) do |w| %>
      <!-- Organization Name -->
      <div class="form-group col-md-6 no-left-padding">
        <%= w.label :name, 'Organization' %>
        <span class="description">(Unique name for your group or organization for the new account)</span>
        <%= w.text_field :name, required: true, class: "form-control" %>
      </div>

      <!-- Plan -->
      <div class="form-group col-md-6 no-right-padding">
        <%= w.label :plan %>
        <%= w.select :plan, options_for_select(Plan.options, params[:plan]), {}, required: true, class: "form-control" %>
      </div>
    <% end %>
  </div>

  <!-- Payment Fields -->
  <div id="payment-fields" style="display: none;">
    <%= fields_for :payment do |p| %>
      <div class="row">
        <!-- Card Number -->
        <div class="form-group col-md-4">
          <%= p.label :card_number, "Card Number", data: { stripe: 'label' } %>
          <%= p.text_field :card_number, class: "form-control", required: true, data: { stripe: 'number' } %>
        </div>

        <!-- CVV -->
        <div class="form-group col-md-2">
          <%= p.label :card_cvv, "Card CVV", data: { stripe: 'label' } %>
          <%= p.text_field :card_cvv, class: "form-control", required: true, data: { stripe: 'cvv' } %>
        </div>

        <!-- Expiration -->
        <div class="form-group col-md-6">
          <%= p.label :card_expires, "Card Expires", class: "d-block", data: { stripe: 'label' } %>
          <div class="row">
            <div class="col-md-6">
              <%= p.select :card_expires_month,
                    options_for_select(Payment.month_options),
                    { include_blank: 'Month' },
                    class: "form-control", required: true, data: { stripe: 'exp-month' } %>
            </div>
            <div class="col-md-6">
              <%= p.select :card_expires_year,
                    options_for_select(Payment.year_options),
                    { include_blank: 'Year' },
                    class: "form-control", required: true, data: { stripe: 'exp-year' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Submit -->
  <div class="form-group mt-3">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

<!-- JS to toggle payment fields -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const planSelect = document.querySelector('select[name="tenant[plan]"]');
    const paymentFields = document.getElementById("payment-fields");

    function togglePaymentFields() {
      if (planSelect.value.toLowerCase() === "free") {
        paymentFields.style.display = "none";
        paymentFields.querySelectorAll("input, select").forEach(i => i.removeAttribute("required"));
      } else {
        paymentFields.style.display = "block";
        paymentFields.querySelectorAll("input, select").forEach(i => i.setAttribute("required", "true"));
      }
    }

    planSelect.addEventListener("change", togglePaymentFields);
    togglePaymentFields(); // Initial check on page load
  });
</script>