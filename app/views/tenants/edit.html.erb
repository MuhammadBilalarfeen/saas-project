<script src="https://js.stripe.com/v2/"></script>
<script>
  Stripe.setPublishableKey("<%= ENV['STRIPE_TEST_PUBLISHABLE_KEY'] %>");
</script>

<h1>Edit Tenant Plan</h1>

<%= form_for @tenant, url: tenant_path(@tenant), html: { method: :patch } do |f| %>

  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :name, 'Organization' %>
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :plan %>
      <%= f.select :plan, options_for_select([['Free', 'free'], ['Premium', 'premium']], @tenant.plan), {}, required: true, class: "form-control" %>
    </div>
  </div>

  <div id="payment-fields" style="<%= @tenant.plan.downcase == 'free' ? 'display:none;' : '' %>">
    <%= f.fields_for :payment do |p| %>
      <div class="row">
        <div class="form-group col-md-4">
          <%= p.label :card_number, "Card Number" %>
          <%= p.text_field :card_number, class: "form-control", required: true %>
        </div>

        <div class="form-group col-md-2">
          <%= p.label :card_cvv, "CVV" %>
          <%= p.text_field :card_cvv, class: "form-control", required: true %>
        </div>

        <div class="form-group col-md-6">
          <%= p.label :card_expires, "Expiration" %>
          <div class="row">
            <div class="col-md-6">
              <%= p.select :card_expires_month, options_for_select(Payment.month_options), {}, required: true, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= p.select :card_expires_year, options_for_select(Payment.year_options), {}, required: true, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit 'Update Plan', class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const planSelect = document.querySelector('select[name="tenant[plan]"]');
    const paymentFields = document.getElementById("payment-fields");

    function togglePaymentFields() {
      if (planSelect.value.toLowerCase() === "free") {
        paymentFields.style.display = "none";
        paymentFields.querySelectorAll("input, select").forEach(i => i.removeAttribute("required"));
      } else {
        paymentFields.style.display = "block";
        paymentFields.querySelectorAll("input, select").forEach(i => i.setAttribute("required", "true"));
      }
    }

    planSelect.addEventListener("change", togglePaymentFields);
    togglePaymentFields();
  });
</script>