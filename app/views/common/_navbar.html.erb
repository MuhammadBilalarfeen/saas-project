<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">

    <!-- Brand -->
    <%= link_to "<i class='fa fa-rocket'></i> Project Management App".html_safe,
                root_path,
                class: "navbar-brand" %>

    <!-- Mobile Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">

      <!-- LEFT SIDE ITEMS -->
      <ul class="navbar-nav me-auto">
        <% if current_user %>

          <!-- ADD MEMBERS -->
          <li class="nav-item me-3">
            <%= link_to "<i class='fa fa-users'></i> Add Members".html_safe,
                        new_member_path,
                        class: "btn btn-primary" %>
          </li>

          <!-- CHANGE PLAN -->
          <% if current_tenant %>
            <li class="nav-item me-2">
              <%= link_to "<i class='fa fa-briefcase'></i> Change Plan".html_safe,
                          edit_tenant_path(current_tenant),
                          class: "btn btn-primary" %>
